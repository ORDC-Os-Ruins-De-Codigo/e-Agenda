@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualizar Contatos";
}

<p>
    <a class="btn btn-outline-primary" href="/compromissos/cadastrar">
        <i class="bi bi-person-fill-add"></i>
        Novo Contato
    </a>
</p>

<div class="d-flex flex-wrap gap-2">
    @foreach (var contato in Model.Registros) {
        <div class="col-12 col-md-3">
            <div class="card justify-content-between my-5 w-100" style="min-width:100%; justify-content:space-between;">
                <div class="card-body" style="min-width:255px">
                    <h5 class="card-text">Nome: @contato.Nome</h5>

                    <span class="d-flex gap-1 justify-content-lg-around mt-4">
                        <a href="/contatos/detalhes/@contato.Id" class="btn btn-primary rounded-start-pill"><i class="bi bi-search"></i></a>
                        <a href="/contatos/editar/@contato.Id" class="btn btn-warning rounded-1"><i class="bi bi-pencil-square"></i></a>
                        <a href="/contatos/excluir/@contato.Id" class="btn btn-danger rounded-end-circle"><i class="bi bi-trash"></i></a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>